{# templates/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inicio - Coffee{% endblock %}

{% block page_body %}
    <div class="hero-image w-100">
        <img src="{{ asset('images/portrait_image.jpg') }}" alt="Imagen de bienvenida" class="img-fluid w-100" style="max-height: 600px; object-fit: cover;">
    </div>
    <div class="text-lg-center text-md-center text-sm-center">
        <br>
        <div class="d-flex align-items-center justify-content-center gap-2">
        <h1 class="h1_index mb-0">Descubre la especialidad del Café</h1><img src="{{ asset('images/coffee-beans.svg') }}" class="coffee_bean_index" alt="Grano de café" width="100" height="100">
        </div>
    </div>
    <br><br><br><br>
    <div class="text-center">
        <h2 class="h2_index">Somos expertos del café</h2>
        <p class="p_index">Conoce todas nuestras variedades y sus procesos para obtener el mejor sabor</p>
        <video autoplay muted loop playsinline class="w-100" style="object-fit: cover; max-height: 600px;">
            <source src="{{ asset('videos/video_coffee.mp4') }}" type="video/webm">
        </video>
    </div>
    <br>
    <div id="vue-animated-sections"></div>
    <br>
    <div class="w-100 w-lg-50 d-flex flex-column justify-content-center align-items-center">
        <h1 class="h1_title_intro text-center mb-3">Lo siguiente es disfrutar :)</h1>
        <img src="{{ asset('images/table_grains_leaves.jpg') }}" alt="Taza de cafe" class="img-fluid image_beans" style="max-width: 80%; height: 50%;">
    </div>


{% endblock %}

